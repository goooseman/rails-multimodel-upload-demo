<div class="container">
<h1>Listing items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Model</th>
      <th>Price</th>
      <th>Photos</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.model %></td>
        <td><%= item.price %></td>
        <td><% item.uploads.each do |p| %>
        <%= image_tag p.upload.url(:small) %>
        <% end %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
</div>
